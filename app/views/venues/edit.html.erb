<!-- Validation failure messages -->
<% if @venue.errors.any? %>
  <% @venue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_venue/<%= @venue.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for style_id -->
      <div class="form-group">
        <label for="style_id" class="control-label">
          Style
        </label>

        <input type="text" id="style_id" name="style_id" placeholder="Style" class="form-control" value="<%= @venue.style_id %>">
      </div>

      <button class="btn btn-warning">
        Update Venue
      </button>
      or
      <a href="/venues/<%= @venue.id %>">Cancel</a>
    </form>
  </div>
</div>
